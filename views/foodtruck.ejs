<%- include('./partials/header.ejs', { title }) %>

<div class="container">
    <div class="row">
        <div class="col-3">
            <img  src="/uploads/<%= truck.photo %>" alt="<%= truck.name %>">
        </div>
        <div class="col-9">
            <iframe
            width="100%"
            height="100%"
            style="border:0"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=37.7749,-122.4194&z=15&output=embed">
            </iframe>
      </div>
    </div>

    <div class="my-5 py-3 d-flex flex-column align-items-start gradient-bg" style="background: #fdffcc;
background: linear-gradient(270deg, rgba(253, 255, 204, 1) 0%, rgba(255, 255, 255, 1) 100%);">
        <h1 class="display-1"><%= truck.name %></h1>
        <div>
            <p class="display-6"><%= truck.description %></p>
        </div>
        <div class="my-1 fs-4 d-flex gap-5">
        <% truck.tags.map((choice) => { %>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="tags" id="<%=
                choice %>" value="<%= choice %>" checked />
                <label class="form-check-label" for="<%= choice %>"
                    ><%= choice %></label
                >
            </div>
        <% }) %>
      </div>
    </div>

    <p><a href="#">Login</a> to leave a review</p>
</div>
<div class="container mb-5">
  <div class="row align-items-start border border-secondary-subtle p-3 text-center">
    <div class="col">
      Avatar goes here
    </div>
    <div class="col">
      <img src="/icons/star.svg" alt="">
      <img src="/icons/star.svg" alt="">
      <img src="/icons/star.svg" alt="">
      <img src="/icons/star.svg" alt="">
      <img src="/icons/star.svg" alt="">
    </div>
    <div class="col">
      How long ago was this review
    </div>
  </div>
  <div class="row border-start border-end border-bottom border-secondary-subtle pt-3">
    <p class="p-5">Review goes here</p>
  </div>
</div>


<%- include('./partials/footer.ejs') %>