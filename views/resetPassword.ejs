<%- include('./partials/header.ejs', { title }) %>

<main id="login">
<div class="container-fluid d-flex justify-content-center align-items-center mt-5 vh-100 bg-dark-subtle">
  <div class="card" style="width: 20rem">
    <div class="card-body">
      <h5 class="card-title text-center mb-4"><%= title %></h5>
      <form action="/login" method="POST">
        <!-- Email input -->
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <!-- Login button -->
        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
      </form>
    </div>
  </div>
</div>
</main>

</body>
</html>